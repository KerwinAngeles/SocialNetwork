﻿@using SocialNetwork.Core.Application.ViewModels.User
@model SaveUserViewModel

@{
    ViewData["Title"] = "Edit User";
}

<body>
    <section>
        <div class="row mt-3 pt-3">
            <div class="col-12 col-sm-4 col-md-4 m-auto">
                <div class="card border-0 shadow">
                    <div class="card-body">

                        <div class="text-center">
                            <h4><i class="fa-solid fa-pen-to-square" style="color: #0866ff"></i></h4>
                        </div>

                        <form method="post" enctype="multipart/form-data" asp-controller="Profile" asp-action="Edit">
                            <div class="mb-2">
                                <input asp-for="Name" class="form-control" placeholder="Name" />
                                <span asp-validation-for="Name" class="text-danger"></span>

                            </div>
                            <div class="mb-2">
                                <input asp-for="LastName" class="form-control" placeholder="Last Name" />
                                <span asp-validation-for="LastName" class="text-danger"></span>

                            </div>
                            <div class="mb-2">
                                <input asp-for="Email" class="form-control" placeholder="Email" />
                                <span asp-validation-for="Email" class="text-danger"></span>

                            </div>
                            <div class="mb-2">
                                <input asp-for="PhotoProfile"  class="form-control"/>
                            </div>
                            <div class="mb-2">
                                <input asp-for="Phone" class="form-control" placeholder="Phone" />
                                <span asp-validation-for="Phone" class="text-danger"></span>

                            </div>
                            <div class="mb-2">
                                <input asp-for="Password" class="form-control" placeholder="Password" />
                            </div>
                            <div class="mb-2">
                                <input asp-for="ConfirmPassword" class="form-control" placeholder="Confirm Password" />
                            </div>
                           
                            <div class="d-grid gap-2 ">
                                <button class="btn text-white fw-bold" style="background-color:#0866ff">Edit</button>
                            </div>
                        </form>
                        <div>
                            <a asp-controller="Home" asp-action="Index" class="btn text-white w-100 mt-2 fw-bold" style="background-color:#42b72a">Back</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</body>
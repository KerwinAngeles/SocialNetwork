@{
    ViewData["Title"] = "Home Page";
}


<div class="container-fluid gedf-wrapper">
    <div class="row">
        <div class="col-md-3">
            <div class="card" style="background: #0866ff">
                <div class="card-body text-white">
                    <h4 class="text-center"><i class="fa-solid fa-user"></i></h4>
                   @*  <div class="mr-2 text-center">
                        <img class="rounded-circle" width="45" src="" alt="">
                    </div> *@
                    <div class="h7 text-center">Kerwin Angeles</div>
                </div>
            </div>
        </div>
        <div class="col-md-6 gedf-main">

            <div class="card gedf-card">
                <div class="card-header text-white fw-bold text-center" style="background: #0866ff">
                    <h5><i class="fa-solid fa-pen-to-square"></i></h5>
                </div>

                <div class="card-body">

                    <div class="tab-content" id="myTabContent">
                        <div class="tab-pane fade show active" id="posts" role="tabpanel" aria-labelledby="posts-tab">
                            <div class="form-group">
                                <label class="sr-only" for="message">post</label>
                                <textarea class="form-control" id="message" rows="3" placeholder="What are you thinking?"></textarea>
                            </div>

                        </div>
                    </div>

                    <div class="card-footer">
                        <a><i class="fa-solid fa-image"></i> Image</a>
                        &nbsp &nbsp
                        <a><i class="fa-solid fa-video"></i> Video</a>
                        &nbsp &nbsp
                        <a><i class="fa-solid fa-share"></i> Share</a>
                    </div>
                </div>
            </div>
            <div class="card gedf-card mt-2">
                <div class="card-header">
                    <div class="d-flex justify-content-between align-items-center">
                        <div class="d-flex justify-content-between align-items-center">
                            <div class="mr-2">
                                <img class="rounded-circle" width="45" src="https://picsum.photos/50/50" alt="">
                            </div>
                            &nbsp &nbsp
                            <div class="ml-3">
                                <div class="h5 m-0"></div>
                                <div class="h7 text-muted">Kerwin Angeles</div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="card-body">
                    <div class="text-muted h7 mb-2"> <i class="fa fa-clock-o"></i>10 min ago</div>
                      <h5 class="card-title">Who can love me?</h5>
                      <p class="card-text">I want a person that can love me.</p>
                </div>
                <div class="card-footer">
                    <a><i class="fa fa-comment"></i> Comment</a>
                </div>
            </div>
        </div>
        
    </div>
</div>